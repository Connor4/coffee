<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="1280dp"
        android:layout_height="670dp"
        android:layout_marginTop="60dp"
        android:background="#ED000000"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="834dp"
            android:layout_height="394dp"
            android:background="@drawable/home_entrance_dialog_bg"
            android:paddingStart="32dp"
            android:paddingTop="27dp"
            android:paddingEnd="32dp"
            android:paddingBottom="27dp">

            <ImageView
                android:id="@+id/global_warning_close_iv"
                android:layout_width="40dp"
                android:layout_height="42dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="27dp"
                android:src="@drawable/home_entrance_close_ic" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/home_warning_normal_ic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/global_warning_title"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dialog_error_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="189dp"
                android:overScrollMode="never" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
